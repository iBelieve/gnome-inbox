{
  "app-id": "io.mspencer.Inbox",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.24",
  "sdk": "org.gnome.Sdk",
  "command": "gnome-inbox",
  "finish-args": [
    "--socket=x11",
    "--socket=wayland",
    "--share=network"
  ],
  "modules": [
    {
      "name": "jsgtk",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/lib/jsgtk",
        "cp -r jsgtk_modules /app/lib/jsgtk",
        "install -Dm755 jsgtk.sh /app/bin/jsgtk"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://webreflection.github.io/jsgtk/archive/jsgtk-0.11.5.tar.gz",
          "sha256": "b7bcaf3777357b157a6f54eeae65debadb9f73f43dadcf8e793904df34d8c1fb"
        }
      ]
    },
    {
      "name": "inbox",
      "buildsystem": "simple",
      "build-commands": [
        "make prefix=/app install"
      ],
      "sources": [
        {
          "type": "git",
          "url": "git://github.com/iBelieve/gnome-inbox.git"
        }
      ]
    }
  ]
}
