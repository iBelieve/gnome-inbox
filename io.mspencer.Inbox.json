{
  "app-id": "io.mspencer.Inbox",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.24",
  "sdk": "org.gnome.Sdk",
  "command": "gnome-inbox",
  "finish-args": [
    "--socket=x11",
    "--socket=wayland",
    "--share=network"
  ],
  "modules": [
    {
      "name": "jsgtk",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/lib/jsgtk",
        "cp -r jsgtk_modules /app/lib/jsgtk",
        "install -Dm755 jsgtk.sh /app/bin/jsgtk"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://webreflection.github.io/jsgtk/archive/jsgtk-0.11.3.tar.gz",
          "sha256": "c1f162eb1858ecd30ba96db2be977c42e3b43cb63afab001d23be6a5859fd0a2"
        }
      ]
    },
    {
      "name": "inbox",
      "buildsystem": "simple",
      "build-commands": [
        "make prefix=/app install"
      ],
      "sources": [
        {
          "type": "git",
          "url": "git://github.com/iBelieve/gnome-inbox.git"
        }
      ]
    }
  ]
}
